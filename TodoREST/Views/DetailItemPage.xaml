<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="TodoREST.Views.DetailItemPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:TodoREST.ViewModels"
    Title="Todo"
    x:DataType="viewmodel:DetailItemViewModel">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,10,0,10" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,5,0,5" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Margin="20">
        <Label Text="Name" />
        <Entry Placeholder="Enter item" Text="{Binding Path=TheItem.Name}" />
        <Label Text="Notes" />
        <Entry Placeholder="Enter notes" Text="{Binding Path=TheItem.Notes}" />
        <Label Text="Done" />
        <Switch IsToggled="{Binding Path=TheItem.IsComplete}" />
        <Button Command="{Binding SaveCommand}" Text="Save" />
        <Button Command="{Binding DeleteCommand}" Text="Delete" />
        <Button Command="{Binding CancelCommand}" Text="Cancel" />
    </VerticalStackLayout>
</ContentPage>
